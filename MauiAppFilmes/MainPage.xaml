<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppFilmes.MainPage">

    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
            <GradientStop Color="Black"/>

        </LinearGradientBrush>
    </ContentPage.Background>

    <ContentPage.Resources>
        <Style TargetType="Button">
            <Setter Property="BackgroundColor" Value="#DF0101" />
            <Setter Property="CornerRadius" Value="15" />
            <Setter Property="TextColor" Value="White" />
            <Setter Property="FontSize" Value="17" />
            <Setter Property="BorderWidth" Value="1" />
            <Setter Property="BorderColor" Value="Black" />
        </Style>
    </ContentPage.Resources>

    <Grid ColumnDefinitions="*, *" RowDefinitions="*, *, *, *, *, *"
          VerticalOptions="FillAndExpand" Padding="3">

        <Button x:Name="btn00" Grid.Row="0" Grid.Column="0" Text="AVENTURA" Clicked="BtnAventura_Clicked"/>
        <Button x:Name="btn10" Grid.Row="1" Grid.Column="0" Text="DRAMA"/>
        <Button x:Name="btn20" Grid.Row="2" Grid.Column="0" Text="FICÇÃO CIENTÍFICA"/>
        <Button x:Name="btn30" Grid.Row="3" Grid.Column="0" Text="INFANTIL"/>
        <Button x:Name="btn40" Grid.Row="4" Grid.Column="0" Text="DOCUMENTÁRIO"/>
        <Button x:Name="btn50" Grid.Row="5" Grid.Column="0" Text="NACIONAL"/>

        <Button x:Name="btn01" Grid.Row="0" Grid.Column="1" Text="COMÉDIA" Clicked="BtnComedia_Clicked"/>
        <Button x:Name="btn11" Grid.Row="1" Grid.Column="1" Text="TERROR"/>
        <Button x:Name="btn21" Grid.Row="2" Grid.Column="1" Text="SUSPENSE"/>
        <Button x:Name="btn31" Grid.Row="3" Grid.Column="1" Text="ANIMAÇÃO"/>
        <Button x:Name="btn41" Grid.Row="4" Grid.Column="1" Text="GUERRA"/>
        <Button x:Name="btn51" Grid.Row="5" Grid.Column="1" Text="ROMANCE"/>




    </Grid>


</ContentPage>
