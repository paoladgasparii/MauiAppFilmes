<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppFilmes.Categorias.Guerra"
             Title="Guerra"
             BackgroundColor="#2f2f30">
    <VerticalStackLayout>
        <ScrollView>
            <Grid RowDefinitions="300, 300, 300"
                  ColumnDefinitions="*, *"
                  Padding="5">
                <ImageButton Aspect="AspectFill" Grid.Column="0" Grid.Row="0"
                             Source="pearlharbor.jpg" x:Name="Pearlharbor"
                             Clicked="btnpearlharbor_Clicked" />

                <ImageButton Aspect="AspectFill" Grid.Column="1" Grid.Row="0" 
                             Source="pijamalistrado.jpg" x:Name="Pijamalistrado" 
                             Clicked="btnpijamalistrado_Clicked"/>

                <ImageButton Aspect="AspectFill" Grid.Column="0" Grid.Row="1" 
                             Source="trezentos.jpg" x:Name="Trezentos" 
                             Clicked="btntrezentos_Clicked"/>

                <ImageButton Aspect="AspectFill" Grid.Column="1" Grid.Row="1" 
                             Source="ultimohomem.jpg" x:Name="Ultimohomem" 
                             Clicked="btnultimohomem_Clicked"/>

            </Grid>
        </ScrollView>
    </VerticalStackLayout>
</ContentPage>