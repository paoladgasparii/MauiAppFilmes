<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppFilmes.Categorias.Ficcao"
             Title="Ficção Científica"
             BackgroundColor="#2f2f30">
    <VerticalStackLayout>
        <ScrollView>
            <Grid RowDefinitions="300, 300, 300"
                  ColumnDefinitions="*, *"
                  Padding="5">

                <ImageButton Aspect="AspectFill" Grid.Column="0" Grid.Row="0" 
                             Source="avatar.jpg" x:Name="Avatar" 
                             Clicked="btnavatar_Clicked"/>

                <ImageButton Aspect="AspectFill" Grid.Column="1" Grid.Row="0"
                             Source="ultimato.jpg" x:Name="Ultimato"
                             Clicked="btnultimato_Clicked" />

                <ImageButton Aspect="AspectFill" Grid.Column="0" Grid.Row="1" 
                             Source="guardioesdagalaxia.jpg" x:Name="Guardioes" 
                             Clicked="btnguardioes_Clicked"/>

                <ImageButton Aspect="AspectFill" Grid.Column="1" Grid.Row="1" 
                             Source="starwars.jpg" x:Name="Starwars" 
                             Clicked="btnstarwars_Clicked"/>

            </Grid>
        </ScrollView>
    </VerticalStackLayout>
</ContentPage>