<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppFilmes.Categorias.Suspense"
             Title="Suspense"
             BackgroundColor="#2f2f30">
    <VerticalStackLayout>
        <ScrollView>
            <Grid RowDefinitions="300, 300, 300"
                  ColumnDefinitions="*, *"
                  Padding="5">

                <ImageButton Aspect="AspectFill" Grid.Column="0" Grid.Row="0" 
                             Source="batman.jpg" x:Name="Batman" 
                             Clicked="btnbatman_Clicked"/>

                <ImageButton Aspect="AspectFill" Grid.Column="1" Grid.Row="0"
                             Source="missao.jpg" x:Name="Missao"
                             Clicked="btnmissao_Clicked" />

                <ImageButton Aspect="AspectFill" Grid.Column="0" Grid.Row="1" 
                             Source="tropa.jpg" x:Name="Tropa" 
                             Clicked="btntropa_Clicked"/>

                <ImageButton Aspect="AspectFill" Grid.Column="1" Grid.Row="1" 
                             Source="zerozerosete.jpg" x:Name="Zerozerosete" 
                             Clicked="btnzerozerosete_Clicked"/>

            </Grid>
        </ScrollView>
    </VerticalStackLayout>
</ContentPage>