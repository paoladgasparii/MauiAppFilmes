<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppFilmes.Categorias.Aventura"
             Title="Aventura"
             BackgroundColor="#2f2f30">
    <VerticalStackLayout>
        <ScrollView>
            <Grid RowDefinitions="300, 300, 300"
                  ColumnDefinitions="*, *"
                  Padding="5">
                <ImageButton Aspect="AspectFill" Grid.Column="0" Grid.Row="0"
                             Source="hobbit.jpg" x:Name="Hobbit"
                             Clicked="btnhobbit_Clicked" />

                <ImageButton Aspect="AspectFill" Grid.Column="1" Grid.Row="0" 
                             Source="homemaranha.jpg" x:Name="Homemaranha" 
                             Clicked="btnhomemaranha_Clicked"/>
                
                <ImageButton Aspect="AspectFill" Grid.Column="0" Grid.Row="1" 
                             Source="hp.jpg" x:Name="Hp" 
                             Clicked="btnhp_Clicked"/>
                
                <ImageButton Aspect="AspectFill" Grid.Column="1" Grid.Row="1" 
                             Source="piratasdocaribe.jpg" x:Name="Piratasdocaribe" 
                             Clicked="btnpiratasdocaribe_Clicked"/>
                
            </Grid>
        </ScrollView>
    </VerticalStackLayout>
</ContentPage>