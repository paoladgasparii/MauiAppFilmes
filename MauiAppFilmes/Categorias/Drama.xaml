<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppFilmes.Categorias.Drama"
             Title="Drama"
             BackgroundColor="#2f2f30">
    <VerticalStackLayout>
        <ScrollView>
            <Grid RowDefinitions="300, 300, 300"
                  ColumnDefinitions="*, *"
                  Padding="5">

                <ImageButton Aspect="AspectFill" Grid.Column="0" Grid.Row="0" 
                             Source="cidadedeus.jpg" x:Name="Cidadededeus" 
                             Clicked="btncidadededeus_Clicked"/>

                <ImageButton Aspect="AspectFill" Grid.Column="1" Grid.Row="0"
                             Source="titanic.jpg" x:Name="Titanic"
                             Clicked="btntitanic_Clicked" />

                <ImageButton Aspect="AspectFill" Grid.Column="0" Grid.Row="1" 
                             Source="extraordinario.jpg" x:Name="Extraordinario" 
                             Clicked="btnextraordinario_Clicked"/>

                <ImageButton Aspect="AspectFill" Grid.Column="1" Grid.Row="1" 
                             Source="poderosochefao.jpg" x:Name="Poderosochefao" 
                             Clicked="btnpoderosochefao_Clicked"/>

            </Grid>
        </ScrollView>
    </VerticalStackLayout>
</ContentPage>
