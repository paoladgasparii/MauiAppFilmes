<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppFilmes.Categorias.Infantil"
             Title="Infantil"
             BackgroundColor="#2f2f30">
    <VerticalStackLayout>
        <ScrollView>
            <Grid RowDefinitions="300, 300, 300"
                  ColumnDefinitions="*, *"
                  Padding="5">
                <ImageButton Aspect="AspectFill" Grid.Column="0" Grid.Row="0"
                             Source="narnia.jpg" x:Name="Narnia"
                             Clicked="btnnarnia_Clicked" />

                <ImageButton Aspect="AspectFill" Grid.Column="1" Grid.Row="0" 
                             Source="fabrica.jpg" x:Name="Fabrica" 
                             Clicked="btnfabrica_Clicked"/>

                <ImageButton Aspect="AspectFill" Grid.Column="0" Grid.Row="1" 
                             Source="belaeafera.jpg" x:Name="Abelaeafera" 
                             Clicked="btnbelaeafera_Clicked"/>

                <ImageButton Aspect="AspectFill" Grid.Column="1" Grid.Row="1" 
                             Source="reileao.jpg" x:Name="Reileao" 
                             Clicked="btnreileao_Clicked"/>

            </Grid>
        </ScrollView>
    </VerticalStackLayout>
</ContentPage>