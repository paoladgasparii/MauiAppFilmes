<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppFilmes.Categorias.Romance"
             Title="Romance"
             BackgroundColor="#2f2f30">
    <VerticalStackLayout>
        <ScrollView>
            <Grid RowDefinitions="300, 300, 300"
                  ColumnDefinitions="*, *"
                  Padding="5">
                <ImageButton Aspect="AspectFill" Grid.Column="0" Grid.Row="0"
                             Source="comoperder.jpg" x:Name="Comoperderumhomememdezdias"
                             Clicked="btncomoperder_Clicked" />

                <ImageButton Aspect="AspectFill" Grid.Column="1" Grid.Row="0" 
                             Source="todosmenosvoce.jpg" x:Name="Todosmenosvoce" 
                             Clicked="btntodosmenosvoce_Clicked"/>

                <ImageButton Aspect="AspectFill" Grid.Column="0" Grid.Row="1" 
                             Source="paratodos.jpg" x:Name="Paratodos" 
                             Clicked="btnparatodos_Clicked"/>

                <ImageButton Aspect="AspectFill" Grid.Column="1" Grid.Row="1" 
                             Source="abarracadobeijo.jpg" x:Name="Abarracadobeijo" 
                             Clicked="btnabarracadobeijo_Clicked"/>

            </Grid>
        </ScrollView>
    </VerticalStackLayout>
</ContentPage>