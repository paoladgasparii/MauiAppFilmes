<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppFilmes.Categorias.Comedia"
             Title="Comedia"
             BackgroundColor="#2f2f30">
    <VerticalStackLayout>
        <ScrollView>
            <Grid RowDefinitions="300, 300, 300"
                  ColumnDefinitions="*, *"
                  Padding="5">
                <ImageButton Aspect="AspectFill" Grid.Column="0" Grid.Row="0"
                             Source="gentegrande.jpg" x:Name="Gentegrande"
                             Clicked="btngentegrande_Clicked" />

                <ImageButton Aspect="AspectFill" Grid.Column="0" Grid.Row="1" 
                             Source="asbranquelas.jpg" x:Name="Asbranquelas" 
                             Clicked="btnasbranquelas_Clicked"/>

                <ImageButton Aspect="AspectFill" Grid.Column="1" Grid.Row="0" 
                             Source="esposadementirinha.jpg" x:Name="Esposadementirinha" 
                             Clicked="btnesposadementirinha_Clicked"/>

                <ImageButton Aspect="AspectFill" Grid.Column="1" Grid.Row="1" 
                             Source="aproposta.jpg" x:Name="Aproposta" 
                             Clicked="btnaproposta_Clicked"/>

            </Grid>
        </ScrollView>
    </VerticalStackLayout>
</ContentPage>