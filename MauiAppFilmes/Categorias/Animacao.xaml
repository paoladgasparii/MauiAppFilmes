<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppFilmes.Categorias.Animacao"
             Title="Animação"
             BackgroundColor="#2f2f30">
    <VerticalStackLayout>
        <ScrollView>
            <Grid RowDefinitions="300, 300, 300"
                  ColumnDefinitions="*, *"
                  Padding="5">
                <ImageButton Aspect="AspectFill" Grid.Column="0" Grid.Row="0"
                             Source="barbie.jpg" x:Name="Barbie"
                             Clicked="btnbarbie_Clicked" />

                <ImageButton Aspect="AspectFill" Grid.Column="1" Grid.Row="0" 
                             Source="enrolados.jpg" x:Name="Homemaranha" 
                             Clicked="btnenrolados_Clicked"/>

                <ImageButton Aspect="AspectFill" Grid.Column="0" Grid.Row="1" 
                             Source="lilostitch.jpg" x:Name="Liloestitch" 
                             Clicked="btnlilostitch_Clicked"/>

                <ImageButton Aspect="AspectFill" Grid.Column="1" Grid.Row="1" 
                             Source="princesaeosapo.jpg" x:Name="Aprincesaeosapo" 
                             Clicked="btnprincesaeosapo_Clicked"/>

            </Grid>
        </ScrollView>
    </VerticalStackLayout>
</ContentPage>